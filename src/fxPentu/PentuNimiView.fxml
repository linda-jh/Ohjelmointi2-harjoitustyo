<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: darkseagreen;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxPentu.PentuNimiController">
   <top>
      <Label text="Penturekisteri" BorderPane.alignment="CENTER">
         <font>
            <Font name="MS Outlook" size="67.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Kasvattajan nimi:">
               <HBox.margin>
                  <Insets bottom="10.0" left="60.0" right="10.0" top="14.0" />
               </HBox.margin>
               <font>
                  <Font name="MS Outlook" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="textNimi">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
   </center>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <bottom>
      <ButtonBar BorderPane.alignment="CENTER">
        <buttons>
          <Button mnemonicParsing="false" onAction="#handleOKNimi" text="OK" />
            <Button mnemonicParsing="false" onAction="#handleKumoaNimi" text="Kumoa" />
        </buttons>
         <BorderPane.margin>
            <Insets left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
</BorderPane>
